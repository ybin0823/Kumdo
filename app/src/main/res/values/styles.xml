<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#38B3FF</item>
        <item name="colorPrimaryDark">#2C8CC7</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!--<item name="colorPoint">#FF68FB</item>-->
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogStyle">
        <item name="android:layout_width">@dimen/category_view_size</item>
        <item name="android:layout_height">@dimen/category_view_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>