<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/best_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/writing_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/writing_text"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/writing_words"
        android:layout_alignBottom="@id/writing_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/writing_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/writing_image"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/writing_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/writing_image"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/writing_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/writing_writer"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_favorite_black_36dp"
        android:background="@android:color/transparent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/writing_writer"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/writing_like"
        android:src="@drawable/ic_comment_black_36dp"
        android:background="@android:color/transparent"/>
</RelativeLayout>